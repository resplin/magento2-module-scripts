#!/usr/bin/env bash

set -euo pipefail

echo "Extracting Magento2 directories app, bin, dev, generated, lib, and vendor..."

for folder in app bin dev generated lib vendor
do
  if [[ -e $folder ]]; then
    rm -rf $folder
    tar -zxf $folder.tar.gz $folder
    rm $folder.tar.gz
    echo "$folder unzipped"
  fi
done

echo "EXTRACTION COMPLETE!"

exit 0
