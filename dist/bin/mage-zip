#!/usr/bin/env bash

set -euo pipefail

cd "$HOME"/public_html

echo "Archiving Magento2 directories app, bin, dev, generated, lib, and vendor..."

for folder in app bin dev generated lib vendor
do
  if [[ -e $folder ]]; then
    tar -zcf $folder.tar.gz $folder
    echo "$folder zipped"
  fi
done

echo "ARCHIVING COMPLETE!"

exit 0
