#!/usr/bin/env bash

set -euo pipefail

echo "Refreshing vendor via composer..."

rm -rf vendor
composer install

bin/mage-clean

echo "Replacing '+FollowSymLinks' with '+SymLinksIfOwnerMatch' in all .htaccess files..."
find . -type f -name '.htaccess' -exec sed -i 's/\+FollowSymLinks/\+SymLinksIfOwnerMatch/g' {} +
echo "  DONE\n"